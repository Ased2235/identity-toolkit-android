<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="identitytoolkit_non_floating">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="identitytoolkit_page">
        <item name="android:background">@color/identitytoolkit_background</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:padding">@dimen/identitytoolkit_page_padding</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="identitytoolkit_inner_container">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="identitytoolkit_text">
        <item name="android:lineSpacingExtra">@dimen/identitytoolkit_text_line_space_extra</item>
        <item name="android:textSize">@dimen/identitytoolkit_text_size_normal</item>
    </style>

    <style name="identitytoolkit_text.header">
        <item name="android:textColor">@color/identitytoolkit_text_header</item>
        <item name="android:textSize">@dimen/identitytoolkit_text_size_header</item>
    </style>

    <style name="identitytoolkit_text.label">
        <item name="android:textColor">@color/identitytoolkit_text_label</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="identitytoolkit_text.instruction">
        <item name="android:textColor">@color/identitytoolkit_text_instruction</item>
    </style>

    <style name="identitytoolkit_text.link">
        <item name="android:textColor">@color/identitytoolkit_text_link</item>
    </style>

    <style name="identitytoolkit_button">
        <item name="android:background">@drawable/identitytoolkit_button_bg</item>
        <item name="android:layout_height">@dimen/identitytoolkit_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/identitytoolkit_text_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/identitytoolkit_button_text</item>
    </style>

    <style name="identitytoolkit_button.idp"></style>

    <style name="identitytoolkit_divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/identitytoolkit_text_input_border_unfocused</item>
    </style>

    <style name="identitytoolkit_text_input">
        <item name="android:background">@drawable/identitytoolkit_text_input_bg</item>
        <item name="android:layout_height">@dimen/identitytoolkit_text_input_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/identitytoolkit_text_input_padding</item>
    </style>

    <style name="identitytoolkit_account_chip">
        <item name="android:background">@drawable/identitytoolkit_account_chip_bg</item>
        <item name="android:padding">@dimen/identitytoolkit_account_chip_padding</item>
    </style>

    <style name="identitytoolkit_account_chip_picture">
        <item name="android:adjustViewBounds">false</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="identitytoolkit_account_chip_text" parent="@identitytoolkit_text">
        <item name="android:layout_marginLeft">@dimen/identitytoolkit_space_big</item>
    </style>

    <style name="identitytoolkit_account_chip_text.name">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="identitytoolkit_account_chip_text.email">
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

</resources>